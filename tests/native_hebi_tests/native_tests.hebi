"""
Native tests in the Hebi-go.
"""

from: unittest :import TestCase
print: TestCase

def: greet: name
    print: "Hello," name

hissp.basic.._macro_.deftype: TestNative :: TestCase
    test_mask lambda: :: self
        self.assertEqual:
            ::  # Example based on cascade macro.
                lambda: :: thing thing_sym : :* calls
                    !mask:::lambda: :: : _:thing_sym _:thing
                        print: "Hi!"  # Builtin symbol.
                        greet: "World!"  # Local symbol.
                        __:map:  # Splice
                            lambda: ::call
                                !mask:::  # Nested !mask.
                                    _:operator..getitem: call 0
                                    _:thing_sym
                                    __:operator..getitem: call slice: 1 None
                            calls
                        _:thing_sym
                : :*
                quote::: spam foo
                    frobnicate: 7 24
                    reticulate: spline
            quote:::lambda: :: : foo spam
                builtins..print: "Hi!"
                tests.native_tests..greet: "World!"
                frobnicate: foo 7 24
                reticulate: foo spline
                foo

    test_elif lambda: :: self
        self.assertEqual:
            hebi.bootstrap..if_:
                : :* quote:::
                    ('a'<'b')
                    ::
                        print: "less"
                    elif: ('a'>'b')
                        print: "more"
                    elif: ('a'=='b')
                        print: "equal"
                    else:
                        print: "nan"
            quote:hebi.bootstrap.._if_:
                ('a'<'b')
                lambda: ::
                    print: "less"
                lambda: ::
                    ('a'>'b')
                lambda: ::
                    print: "more"
                lambda: ::
                    ('a'=='b')
                lambda: ::
                    print: "equal"
                : else_
                lambda: ::
                    print: "nan"

    test_fail lambda: :: self
        self.fail:

